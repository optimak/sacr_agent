# SACR Project Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# NOTION CONFIGURATION
# =============================================================================
NOTION_TOKEN=secret_xyz123...
NOTION_DATABASE_NAME=CyberSecurity Database
PARENT_PAGE_ID=your_parent_page_id

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Choose ONE vector database option:
USE_LOCAL_VECTOR_DB=true
LOCAL_VECTOR_DB_ENGINE=chroma
USE_AZURE_AI_SEARCH=false

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
EMBEDDING_DEPLOYMENT=text-embedding-3-small
GPT4O_DEPLOYMENT=gpt-4o
GPT4O_MINI_DEPLOYMENT=gpt-4o-mini

# =============================================================================
# AZURE AI SEARCH CONFIGURATION (only if USE_AZURE_AI_SEARCH=true)
# =============================================================================
AZURE_SEARCH_SERVICE_NAME=your_search_service
AZURE_SEARCH_API_KEY=your_search_key
INDEX_NAME=sacr-rag

# =============================================================================
# PROMPT FLOW CONFIGURATION
# =============================================================================
# For LOCAL Prompt Flow (recommended):
USE_PROMPTFLOW_LOCAL=true
# PROMPTFLOW_ENDPOINT=  # Not needed for local
# PROMPTFLOW_KEY=       # Not needed for local

# For REMOTE Prompt Flow (Azure deployed):
# USE_PROMPTFLOW_LOCAL=false
# PROMPTFLOW_ENDPOINT=https://your-promptflow-endpoint.azure.com/score
# PROMPTFLOW_KEY=your_promptflow_key

# =============================================================================
# IMAGE PROCESSING CONFIGURATION
# =============================================================================
ENABLE_IMAGE_OCR=true
ENABLE_IMAGE_UNDERSTANDING=false

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
MAX_PAGES_TO_PROCESS=100
MAX_TOKENS_PER_CHUNK=380
OVERLAP_TOKENS=40
TOP_K=5

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_DIR=rag_output
CACHE_DIR=cache

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
PORT=8501
